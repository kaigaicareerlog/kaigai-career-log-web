---
import { parseJSONFeed } from '../../utils/jsonParser';
import type { PodcastEpisode } from '../../utils/types';
import PodcastListItem from './PodcastListItem.astro';

// JSONフィードからポッドキャストデータを取得
let rssData;
try {
  rssData = await parseJSONFeed();
} catch (error) {
  console.error('Failed to parse JSON feed:', error);
  rssData = {
    title: '海外キャリアログ',
    description: 'ポッドキャスト情報を読み込み中...',
    link: '',
    language: 'ja',
    image: '',
    episodes: []
  };
}

const podcasts: PodcastEpisode[] = rssData.episodes || [];
---

<section class="podcast-section">
  <div class="container">
    <h2 class="section-title">エピソード一覧</h2>
    {podcasts.length > 0 ? (
      <div class="podcast-list">
        {podcasts.map((podcast) => (
          <PodcastListItem podcast={podcast} />
        ))}
      </div>
    ) : (
      <div class="no-episodes">
        <p>エピソードが見つかりませんでした。</p>
      </div>
    )}
    
    <div class="more-episodes">
      <p>もっと多くのエピソードをお楽しみいただけます</p>
      <a href="https://podcasters.spotify.com/pod/show/kaigaicareerlog" target="_blank" rel="noopener noreferrer" class="subscribe-btn">
        📱 ポッドキャストを購読する
      </a>
    </div>
  </div>
</section>

<style>
  .podcast-section {
    padding: 2rem 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.02), rgba(139, 92, 246, 0.02));
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .section-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 600;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .podcast-list {
    display: flex;
    flex-direction: column;
    margin-bottom: 2rem;
  }


  .no-episodes {
    text-align: center;
    padding: 3rem;
    color: var(--color-muted);
    font-size: 1.1rem;
  }


  .more-episodes {
    text-align: center;
    padding: 2rem;
    background: rgba(59, 130, 246, 0.05);
    border-radius: 1rem;
    border: 1px solid rgba(59, 130, 246, 0.1);
  }

  .more-episodes p {
    margin-bottom: 1rem;
    color: var(--color-text);
    font-size: 1.1rem;
  }

  .subscribe-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: var(--color-background);
    color: var(--color-primary);
    text-decoration: none;
    border: 2px solid var(--color-primary);
    border-radius: 0.75rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .subscribe-btn:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(59, 130, 246, 0.3);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .podcast-section {
      padding: 1.5rem 0;
    }

    .section-title {
      margin-bottom: 1rem;
    }

    .subscribe-btn {
      padding: 0.75rem 1.25rem;
      font-size: 0.9rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .more-episodes {
      background: rgba(59, 130, 246, 0.1);
      border-color: rgba(59, 130, 246, 0.2);
    }
  }
</style>

