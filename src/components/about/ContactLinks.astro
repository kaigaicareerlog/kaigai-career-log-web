    border-color: rgba(255, 182, 193, 0.5);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .contact-grid {
      flex-direction: column;
      gap: 1rem;
    }

    .contact-link {
      padding: 1.25rem 1.5rem;
    }
  }

