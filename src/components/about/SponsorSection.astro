    border-radius: 1.2rem;
    padding: 2px;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
  }

  .sponsor-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 32px rgba(59, 130, 246, 0.2);
  }

  .sponsor-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .logo-img {
    width: 60px;
    height: 60px;
    object-fit: contain;
    border-radius: 0.75rem;
    background: rgba(59, 130, 246, 0.05);
    padding: 0.5rem;
    border: 2px solid rgba(59, 130, 246, 0.1);
  }

  .sponsor-content h3 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .sponsor-description {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text);
    text-align: center;
    margin-bottom: 1.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .sponsor-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .tag {
    display: inline-block;
    padding: 0.4rem 0.8rem;
    background: rgba(14, 165, 233, 0.1);
    color: var(--color-primary);
    border-radius: 0.5rem;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid rgba(14, 165, 233, 0.2);
  }

  .sponsor-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .sponsor-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .btn-icon {
    font-size: 1.2rem;
  }

  .btn-icon-img {
    width: 20px;
    height: 20px;
    object-fit: contain;
  }

  .sponsor-btn.website {
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    color: white;
    border: 2px solid transparent;
  }

  .sponsor-btn.website:hover {
