    font-weight: 600;
    text-align: center;
    margin-bottom: 2rem;
    color: var(--color-text);
  }

  .sponsor-card {
    max-width: 800px;
    margin: 0 auto;
    padding: 2.5rem;
    background: var(--color-background);
