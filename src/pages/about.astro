<style>
	.about-page {
		flex: 1;
		width: 100%;
		padding: 3rem 0;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	/* Podcast Info Section */
	.podcast-info {
		margin-bottom: 4rem;
		text-align: center;
	}

	.podcast-info h1 {
		font-size: clamp(2rem, 5vw, 3rem);
		font-weight: 700;
		background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin-bottom: 1.5rem;
	}

	.description {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--color-text);
		max-width: 800px;
		margin: 0 auto 3rem;
	}

	/* Platform Links */
	.podcast-links h2 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		color: var(--color-text);
	}

	.platform-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1rem;
		max-width: 900px;
		margin: 0 auto;
	}

	.platform-link {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		padding: 1rem 1.5rem;
		background: var(--color-background);
		border: 2px solid rgba(59, 130, 246, 0.2);
		border-radius: 0.75rem;
		text-decoration: none;
		color: var(--color-text);
		font-weight: 500;
		transition: all 0.3s ease;
	}

	.platform-link:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 20px rgba(59, 130, 246, 0.2);
	}

	.platform-link.spotify {
		border-color: rgba(29, 185, 84, 0.3);
	}

	.platform-link.spotify:hover {
		border-color: #1db954;
		background: rgba(29, 185, 84, 0.05);
	}

	.platform-link.apple {
		border-color: rgba(142, 67, 240, 0.3);
	}

	.platform-link.apple:hover {
		border-color: #8e43f0;
		background: rgba(142, 67, 240, 0.05);
	}

	.platform-link.youtube {
		border-color: rgba(255, 0, 0, 0.3);
	}

	.platform-link.youtube:hover {
		border-color: #ff0000;
		background: rgba(255, 0, 0, 0.05);
	}

	.platform-link.twitter {
		border-color: rgba(29, 155, 240, 0.3);
	}

	.platform-link.twitter:hover {
		border-color: #1d9bf0;
		background: rgba(29, 155, 240, 0.05);
	}

	.platform-icon {
		width: 24px;
		height: 24px;
		object-fit: contain;
	}

	/* Hosts Section */
	.hosts-section {
		margin-top: 4rem;
	}

	.hosts-section h2 {
		font-size: 2rem;
		font-weight: 700;
		text-align: center;
		margin-bottom: 2rem;
		background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hosts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.host-card {
		background: var(--color-background);
		border-radius: 1rem;
		padding: 2rem;
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
		border: 1px solid rgba(59, 130, 246, 0.1);
		transition: all 0.3s ease;
	}

	.host-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 30px rgba(59, 130, 246, 0.15);
	}

	.host-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 1rem;
		padding-bottom: 1rem;
		border-bottom: 2px solid rgba(59, 130, 246, 0.1);
	}

	.host-card h3 {
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--color-text);
	}

	.host-links {
		display: flex;
		gap: 0.75rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
		border-radius: 0.5rem;
		background: rgba(59, 130, 246, 0.08);
		border: 1px solid rgba(59, 130, 246, 0.2);
		text-decoration: none;
		font-size: 1.2rem;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background: rgba(59, 130, 246, 0.15);
		border-color: var(--color-primary);
		transform: scale(1.1);
	}

	.social-icon {
		width: 18px;
		height: 18px;
		object-fit: contain;
	}

	.coming-soon {
		color: var(--color-muted);
		font-style: italic;
		font-size: 1rem;
		text-align: center;
		padding: 2rem 0;
	}

	/* Mobile responsive */
	@media (max-width: 768px) {
		.about-page {
			padding: 2rem 0;
		}

		.podcast-info {
			margin-bottom: 3rem;
		}

		.description {
			font-size: 1rem;
			line-height: 1.6;
		}

		.platform-grid {
			grid-template-columns: 1fr;
			gap: 0.75rem;
		}

		.hosts-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.host-card {
			padding: 1.5rem;
		}
	}

	/* Dark mode support */
	@media (prefers-color-scheme: dark) {
		.host-card {
			background: rgba(15, 23, 42, 0.8);
			border-color: rgba(59, 130, 246, 0.2);
		}

		.platform-link {
			background: rgba(15, 23, 42, 0.8);
		}
	}
</style>

