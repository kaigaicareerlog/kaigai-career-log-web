<style>
	.about-page {
		flex: 1;
		width: 100%;
		padding: 2rem 0;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	/* Hero Section */
	.hero {
		text-align: center;
		margin-bottom: 3rem;
		padding-top: 1rem;
	}

	.hero h1 {
		font-size: clamp(2.5rem, 6vw, 4rem);
		font-weight: 700;
		background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin-bottom: 0.5rem;
	}

	.tagline {
		font-size: clamp(1rem, 2vw, 1.3rem);
		color: var(--color-muted);
		font-weight: 400;
		margin-bottom: 0;
	}

	/* Hosts Section */
	.hosts-section {
		margin-bottom: 4rem;
	}

	.hosts-section h2 {
		font-size: 1.8rem;
		font-weight: 600;
		text-align: center;
		margin-bottom: 2rem;
		color: var(--color-text);
	}

	.hosts-list {
		max-width: 700px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.host-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1.5rem 2rem;
		background: var(--color-background);
		border-radius: 1rem;
		border-left: 4px solid transparent;
		border-image: linear-gradient(135deg, var(--color-primary), var(--color-secondary)) 1;
		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
		transition: all 0.3s ease;
	}

	.host-item:hover {
		transform: translateX(8px);
		box-shadow: 0 6px 24px rgba(59, 130, 246, 0.15);
	}

	.host-info {
		flex: 1;
	}

	.host-item h3 {
		font-size: 1.5rem;
		font-weight: 700;
		background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin-bottom: 0.25rem;
	}

	.bio {
		color: var(--color-muted);
		font-style: italic;
		font-size: 0.95rem;
	}

	.host-social {
		display: flex;
		gap: 0.5rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		min-width: 36px;
		min-height: 36px;
		border-radius: 0.5rem;
		background: rgba(14, 165, 233, 0.08);
		border: 1.5px solid rgba(14, 165, 233, 0.2);
		text-decoration: none;
		font-size: 1.2rem;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background: rgba(14, 165, 233, 0.15);
		border-color: var(--color-primary);
		transform: scale(1.1);
	}

	.social-icon {
		width: 20px;
		height: 20px;
		min-width: 20px;
		min-height: 20px;
		object-fit: contain;
	}

	.social-link.frog {
		font-size: 1.3rem;
		line-height: 1;
	}

	/* Platform Links */
	.podcast-links {
		text-align: center;
		padding: 2rem 0;
	}

	.podcast-links h2 {
		font-size: 1.3rem;
		font-weight: 500;
		margin-bottom: 1.5rem;
		color: var(--color-muted);
	}

	.platform-grid {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
		max-width: 600px;
		margin: 0 auto;
	}

	.platform-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.6rem 1rem;
		background: rgba(59, 130, 246, 0.05);
		border: 1.5px solid rgba(59, 130, 246, 0.15);
		border-radius: 0.6rem;
		text-decoration: none;
		color: var(--color-text);
		font-weight: 500;
		font-size: 0.9rem;
		transition: all 0.3s ease;
	}

	.platform-link:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(59, 130, 246, 0.15);
	}

	.platform-link.spotify:hover {
		background: rgba(29, 185, 84, 0.1);
		border-color: rgba(29, 185, 84, 0.4);
	}

	.platform-link.apple:hover {
		background: rgba(142, 67, 240, 0.1);
		border-color: rgba(142, 67, 240, 0.4);
	}

	.platform-link.youtube:hover {
		background: rgba(255, 0, 0, 0.1);
		border-color: rgba(255, 0, 0, 0.4);
	}

	.platform-link.twitter:hover {
		background: rgba(29, 155, 240, 0.1);
		border-color: rgba(29, 155, 240, 0.4);
	}

	.platform-icon {
		width: 18px;
		height: 18px;
		object-fit: contain;
	}

	/* Contact Section */
	.contact-section {
		margin-top: 3rem;
		padding-top: 3rem;
		border-top: 1px solid rgba(59, 130, 246, 0.1);
	}

	.contact-section h2 {
		font-size: 1.3rem;
		font-weight: 500;
		text-align: center;
		margin-bottom: 1.5rem;
		color: var(--color-muted);
	}

	.contact-grid {
		display: flex;
		justify-content: center;
		gap: 1.5rem;
		max-width: 500px;
		margin: 0 auto;
	}

	.contact-link {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		padding: 1.5rem 2rem;
		background: var(--color-background);
		border: 2px solid rgba(59, 130, 246, 0.15);
		border-radius: 1rem;
		text-decoration: none;
		color: var(--color-text);
		transition: all 0.3s ease;
		flex: 1;
	}

	.contact-link:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 24px rgba(59, 130, 246, 0.2);
		border-color: rgba(59, 130, 246, 0.3);
	}

	.contact-icon {
		font-size: 2rem;
	}

	.contact-text {
		font-weight: 600;
		font-size: 1rem;
	}

	.contact-link.email:hover {
		background: rgba(59, 130, 246, 0.05);
	}

	.contact-link.marshmallow:hover {
		background: rgba(255, 182, 193, 0.1);
		border-color: rgba(255, 182, 193, 0.5);
	}

	/* Mobile responsive */
	@media (max-width: 768px) {
		.about-page {
			padding: 1.5rem 0;
		}

		.hero {
			margin-bottom: 2rem;
		}

		.hosts-section {
			margin-bottom: 3rem;
		}

		.host-item {
			flex-direction: column;
			align-items: flex-start;
			gap: 1rem;
			padding: 1.25rem 1.5rem;
		}

		.host-item:hover {
			transform: translateY(-4px) translateX(0);
		}

		.platform-grid {
			flex-direction: column;
			gap: 0.75rem;
		}

		.platform-link {
			width: 100%;
			padding: 0.75rem 1rem;
		}

		.contact-grid {
			flex-direction: column;
			gap: 1rem;
		}

		.contact-link {
			padding: 1.25rem 1.5rem;
		}
	}

	/* Dark mode support */
	@media (prefers-color-scheme: dark) {
		.host-item {
			background: rgba(15, 23, 42, 0.8);
		}

		.platform-link {
			background: rgba(59, 130, 246, 0.08);
			border-color: rgba(59, 130, 246, 0.2);
		}

		.contact-link {
			background: rgba(15, 23, 42, 0.8);
			border-color: rgba(59, 130, 246, 0.2);
		}

		.contact-section {
			border-top-color: rgba(59, 130, 246, 0.2);
		}
	}
</style>

